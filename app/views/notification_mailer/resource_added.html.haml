%p.lead
  #{link_to @added_by.name, @added_by.link} added #{indefinite_articlerize(@resource.kind.sub("ibook", "iBook"))}
  to #{link_to @collection.name, @collection.link}:

%table
  %tr.resource
    - if @resource.image_url
      %td.imageContainer
        = link_to @resource.link do
          %img{ src: @resource.image_url }
    %td
      = link_to @resource.link do
        %p.name= @resource.name
      %p.lede= @resource.description
%p
  = link_to "Visit collection", @collection.link, class: "btn"
= render "notification_settings", user: @user
