<h1>Tag Groups</h1>

<div>
  <%= link_to "New Tag Group",
               new_admin_tag_group_path,
               class: 'btn btn-default' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Tags</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tag_groups.each do |u| %>
      <tr>
        <td><%= u.name %></td>
        <td><%= u.tags.sort.join(" | ") %></td>
        <td>
          <%= link_to "Edit", [:edit, :admin, u] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
